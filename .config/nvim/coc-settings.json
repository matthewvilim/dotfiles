{
  "languageserver": {
    "clangd": {
      "command": "clangd-9",
      "args": ["--background-index"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
    }
  },
  "list.source.files.command": "fd",
  "list.source.files.args": ["--hidden", "--exclude", ".git/"],
  "list.source.grep.command": "rg",
  "list.source.grep.args": ["--smart-case"],
  "list.source.words.defaultOptions": ["--interactive", "--ignore-case"],
  "coc.source.around.firstMatch": false,
  "coc.source.buffer.firstMatch": false,
  "diagnostic.messageTarget": "echo"
}
