set tabstop=2
set shiftwidth=2
set expandtab

set number
set relativenumber
syntax on
set showcmd

set tags=./tags;

set autoindent
set smartindent
set spell

set hlsearch
set smartcase
set ignorecase
set cursorline
set incsearch

set completeopt=longest,menuone,preview
set timeoutlen=1000 ttimeoutlen=0
set laststatus=2

set background=dark
colorscheme solarized
let g:solarized_diffmode="high"
