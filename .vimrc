set wildignorecase
set autochdir
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab

set number
set relativenumber
syntax on
set showcmd
set scrolloff=10

set tags=./tags;

set autoindent
set smartindent
set spell

set hlsearch
set smartcase
set ignorecase
set cursorline
set incsearch

set completeopt=longest,menuone,preview
set timeoutlen=1000 ttimeoutlen=0
set laststatus=2
set backspace=indent,eol,start

set background=dark
colorscheme solarized
let g:solarized_diffmode="high"

nnoremap <C-h> <C-]>
nnoremap <C-n> g]
